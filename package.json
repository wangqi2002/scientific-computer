{
    "name": "scientific-computer",
    "description": "scientific-computer",
    "author": "wang大可",
    "version": "0.2.0",
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "electron:dev": "nodemon -e js,html,cjs,css --exec electron . --delay 2",
        "start": "run-p serve electron:dev",
        "electron:build": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "B3058S",
        "productName": "scientific-computer",
        "copyright": "Copyright © year ${author}",
        "directories": {
            "output": "app_client"
        },
        "mac": {
            "category": "public.app-category.music",
            "icon": "build/icon/icon-256.ico",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "build/icon/icon-256.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icon/icon-256.ico",
            "uninstallerIcon": "build/icon/un-icon-256.ico"
        }
    },
    "dependencies": {
        "core-js": "^3.8.3",
        "element-plus": "^2.3.7",
        "npm-run-all": "^4.1.5",
        "vue": "^3.2.13",
        "vue-router": "^4.0.3",
        "vuex": "^4.0.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~5.0.0",
        "@vue/cli-plugin-router": "~5.0.0",
        "@vue/cli-plugin-vuex": "~5.0.0",
        "@vue/cli-service": "~5.0.0",
        "electron": "^25.1.0",
        "electron-builder": "^24.4.0",
        "sass": "^1.32.7",
        "sass-loader": "^12.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ]
}
